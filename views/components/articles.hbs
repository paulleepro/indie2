                                <h2 class="articles__title mv3 super-clarendon black f3 fw1 dim">{{article.fields.title}}</h2>
                                <p class="articles__body black dim">{{truncate article.fields.body 150}}</p>
                                <p class="navy f5 dim">{{dateFormat publishDate}}</p>

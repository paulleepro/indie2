<div class="storefront__wrap" data-active-segment="{{activeSegment}}">
    <div class="storefront__controls bg-offwhite">
        <div class="storefront__controlsInner flex flex-wrap pt6 pb4 ph2 ph4-l">
            <div class="storefront__segmentTogglesWrap w-100 w-50-ns flex items-center justify-between justify-start-ns mb4 mb0-ns">
                <span class="storefrontAction__segmentToggle storefront__segmentToggle storefront__segmentToggle--ritual w-50 w-auto-ns pv3 ph4 bt bb bl b--moon-gray tc bg-white pointer" data-segment="ritual">Ritual</span>

<section class="homeHero">
    <div class="homeHero__inner cover bg-center ph4 ph5-l" style="background-image: url('{{cms.heroImage.fields.file.url}}?q=80&w=1440');">
        <div class="homeHero__text w-75 w-third-l pt7 pb7 pb5-l">
            <h1 class="homeHero__headline ma0 f2 white super-clarendon normal">{{{cms.heroHeadline}}}</h1>
            <span class="homeHero__shortText db mv4 f4">{{cms.heroShortText}}</span>
            {{#if cms.heroCta}}
                <a class="homeHero__cta dib pv3 ph5 trend-sans link ttu f5 black fw6 tracked bg-white" href="{{cms.heroCtaUrl}}">{{cms.heroCta}}</a>
            {{/if}}
        </div>
    </div>
</section>
<section class="featureProducts">
    <div class="featureProducts__inner pl4 pl5-l pt5 pb5">
        <div class="featureProducts__scroller mb4 mb0-l pb4 hzScroller">
            <div class="featureProducts__scrollerItem hzScroller__item dn db-l pr5">
                <div class="featureProducts__scrollerIntroCopy">
                    <h1 class="featureProducts__scrollerTitle ma0 f3 fw5">{{cms.featureProductsTitle}}</h1>
                    <span class="featureProducts__scrollerDescription db pt4 pb5 f4">{{cms.featureProductsDescription}}</span>
                    <a class="featureProducts__cta db pv3 trend-sans link ttu tc f5 fw5 white bg-navy" href="{{cms.featureProductsCtaUrl}}">{{cms.featureProductsCta}}</a>
                </div>
            </div>
            {{#each cms.featureProducts as |product|}}
                <a class="featureProducts__scrollerItem hzScroller__item relative db link black bg-white" href="/shop/products/{{product.fields.slug}}">
                    <div class="h-100 pv3" style="background: {{hexToRgba product.fields.focus.0.fields.hexColor product.fields.focus.0.fields.alpha}};">
                        <img class="featureProducts__productRitualIcon absolute w1 top-1 left-1" src="{{product.fields.ritual.0.fields.icon.fields.file.url}}">
                        <div class="featureProducts__productImage aspect-ratio--1x1 contain bg-center" style="background-image: url('{{product.fields.images.0.fields.file.url}}?q=80&w=480')"></div>
                        <h2 class="featureProducts__productName mt3 mb0 ph3 f5 b tc">{{product.fields.name}}</h2>
                        <div class="featureProducts__productDetails mv2 ph3 f5 tc">
                            {{#ifCond product.fields.productVariants.length '===' 1}}
                                <span class="storefront__productVariants">{{product.fields.productVariants.0.fields.variation}}</span>
                                <span class="featureProducts__productPrice"> | ${{product.fields.price}}.00</span>
                            {{else}}
                                <span class="featureProducts__productVariants">{{product.fields.productVariants.length}} Sizes</span>
                                <span class="featureProducts__productPrice"> | From 
                                {{#each product.fields.productVariants as |variant|}}
                                    {{#if @last}}${{variant.fields.price}}.00{{/if}}
                                {{/each}}
                                </span>
                            {{/ifCond}}
                        </div>
                    </div>
                </a>
            {{/each}}
        </div>
        <div class="featureProducts__scrollerIntroCopy dn-l pr4">
            <h1 class="featureProducts__scrollerTitle ma0 f3 fw5">{{cms.featureProductsTitle}}</h1>
            <span class="featureProducts__scrollerDescription db pv3 f4">{{cms.featureProductsDescription}}</span>
            <a class="featureProducts__cta db w-50-m pv3 trend-sans link ttu tc f5 fw5 white bg-navy" href="{{cms.featureProductsCtaUrl}}">{{cms.featureProductsCta}}</a>
        </div>
    </div>
</section>
<section class="subFeature">
    <div class="subFeature__inner dn-l pb5 ph4 mw9 center">
        <div class="subFeature__mediaWrap w-100 w-50-l">
            <div class="subFeature__media aspect-ratio--4x3 cover bg-right" style="background-image: url('{{cms.subFeatureMedia.fields.file.url}}?q=80&w=1200');"></div>
        </div>
        <div class="subFeature__copyWrap w-100 w-70-m w-50-l pt3 center">
            <span class="subFeature__eyebrow db pb3 tc f5">{{cms.subFeatureEyebrow}}</span>
            <h1 class="subFeature__title ma0 trend-sans f3 fw4 tc">{{cms.subFeatureTitle}}</h1>
            <p class="subFeature__description tc">{{cms.subFeatureDescription}}</p>
            <div class="subFeature__ctaWrap flex justify-center pt3">
                <a class="subFeature__cta w-100 w-auto-m pv3 ph4 ph5-m trend-sans link ttu f5 fw5 tc white bg-navy" href="{{cms.subFeatureCtaUrl}}">{{cms.subFeatureCta}}</a>
            </div>
        </div>
        <div class="cf"></div>
    </div>
    <div class="subFeature__inner-desktop dn db-l mw9 center">
        <div class="subFeature__media relative w-100 aspect-ratio--16x9 cover bg-right" style="background-image: url('{{cms.subFeatureMedia.fields.file.url}}?q=80&w=1200');">
            <div class="subFeature__copyWrap absolute w-50 v-center pa4">
                <span class="subFeature__eyebrow db pb3 tc f5">{{cms.subFeatureEyebrow}}</span>
                <h1 class="subFeature__title ma0 trend-sans fw4 tc">{{cms.subFeatureTitle}}</h1>
                <p class="subFeature__description tc">{{cms.subFeatureDescription}}</p>
                <div class="subFeature__ctaWrap flex justify-center pt4">
                    <a class="subFeature__cta pv3 ph5 trend-sans link ttu f5 fw5 tc white bg-navy" href="{{cms.subFeatureCtaUrl}}">{{cms.subFeatureCta}}</a>
                </div>
            </div>
            <div class="cf"></div>
        </div>
    </div>
</section>

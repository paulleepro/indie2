{{#if cms.featuredEvents}}
<section class="featuredEvents">
    <div class="featuredEvents__inner pv2 ph4">
        <div class="featuredEvents__introMobile db dn-l mw5 mb5">
            <h1 class="featuredEvents__title">{{cms.featuredEventsTitle}}</h1>
            <p class="featuredEvents__description">{{cms.featuredEventsDescription}}</p>
        </div>
        <div class="featuredEvents__scroller pb5 hzScroller">
            {{#each cms.featuredEvents as |event|}}
                <a class="featuredEvents__scrollerItem flex items-stretch hzScroller__item relative w-third w-20-l pa2 link black" href="/shop/events/{{event.sys.id}}">
                    <div class="featuredEvents__scrollerItemInner bg-white">
                        <div class="featuredEvents__eventImage aspect-ratio--4x3 cover bg-center" style="background-image: url('{{event.fields.image.fields.file.url}}?q=80&w=480')"></div>
                        <h2 class="featuredEvents__eventName mt3 mb0 ph2 f6 f5-l tc normal lh-copy">{{event.fields.name}}</h2>
                        <div class="featuredEvents__eventDetails mv2 ph2 f6 f4-l tc">

                        </div>
                    </div>
                </a>
            {{/each}}
            <div class="featuredEvents__scrollerItem hzScroller__item w-20-l">
                <div class="featuredEvents__scrollerIntroCopy dn db-l pl4">
                    <h1 class="featuredEvents__scrollerTitle ma0 ttu f3">{{cms.featuredEventsTitle}}</h1>
                    <span class="featuredEvents__scrollerDescription db pt4 pb4 f4">{{cms.featuredEventsDescription}}</span>
                    <a class="featuredEvents__cta db pv3 link ttu tc f5 fw5 white bg-navy" href="{{cms.featuredEventsCtaUrl}}">{{cms.featuredEventsCta}}</a>
                </div>
            </div>
        </div>
    </div>
</section>
{{/if}}
